// See https://containers.dev/implementors/json_reference/ for configuration reference
{
  "name": "React Portfolio Dev Container",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "react-portfolio",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },

    "ghcr.io/prulloac/devcontainer-features/bun:1.2.0": {},

    "ghcr.io/devcontainers/features/java:1": {
      "version": "latest",
      "installGradle": "true",
      "installMaven": "false"
    },
    "ghcr.io/devcontainers-extra/features/kotlin-sdkman:2": {},
    "ghcr.io/va-h/devcontainers-features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/supabase-cli:1": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {},
    "ghcr.io/jsburckhardt/devcontainer-features/codex:1": {},
    "ghcr.io/devcontainers-extra/features/tmux-apt-get:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/jungaretti/features/vim:1": {},
    "ghcr.io/devcontainers-extra/features/neovim-apt-get:1": {},

  },
  "customizations": {
    "jetbrains": {
      "backend": "WebStorm"
    }
  }
}
